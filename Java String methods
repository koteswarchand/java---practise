class HelloWorld {
    public static void main(String[] args) {
         //charAt(int index)
        String a = "hello";
        String[] A = {"a","e","i","o","u"};
        for(int i = 0; i < a.length(); i++){
             System.out.println(a.charAt(i));
        }
        
        /*substring(int index) - return type - string
        returns the string from the given index*/
        
        System.out.println(a.substring(1));
        
        /*substring(int begin_index, end_index) - return type string
        contains two parameters begin and end
        begins from start index and ends at (end-1)*/
        
         System.out.println(a.substring(1,4));
         
         /*contains - return type : boolean
         contains - case sensivtive
         return true if contains or false*/
         
          boolean b = a.contains("h");
          System.out.println(b);
          int count = 0;
          String c = "hellooo";
          
          /*equals() - return type: boolean 
          compares one string object to another string object */
          
          String a = "hello";
          String b = "hello";
          if(a.equals(b));
          System.out.println("equal");
          
          /*replace(char old, char new) - return type: string
          replaces the old character with new charatcer with in
          the string*/
          
          String a = "hello";
          System.out.println(a.replace('h','H'));
          
          ?* replace(old charasequence, new charsequence)
          replaces a charsequence of a particular string to new charsequence */
          
          System.out.println(a.replace("ello","ai"));
 
          
         
    }
}
